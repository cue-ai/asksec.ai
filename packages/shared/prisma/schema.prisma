datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["orderByNulls"]
}

enum Status {
  Loading
  Error
  Success
}

model SecCompany {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  ticker String  @unique
  status Status?

  sections SecCompanySectionItem[]
}

enum TenKSection {
  One
  OneA
  SevenA
}

model SecCompanySectionItem {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  companyId String     @db.ObjectId
  company   SecCompany @relation(fields: [companyId], references: [id])

  section   TenKSection
  text      String
  embedding Float[]     @default([])

  order Int
}
